Package: groupedHG
Type: Package
Title: Grouped Hypergeometric Distribution
Version: 0.1.0
Authors@R: 
    c(
      person("Barnes", "Belinda", email = "Belinda.Barnes@aff.gov.au", role = "aut"),
      person("Mahdi", "Parsa", email = "Mahdi.Parsa@aff.gov.au", role = "aut"),
      person("Sumonkanti", "Das", email = "sumonkanti.das@anu.edu.au", role = c("aut", "cre")),
      person("Clark", "Robert", email = "robert.clark@anu.edu.au", role = "aut")
